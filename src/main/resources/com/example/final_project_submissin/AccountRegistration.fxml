<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="863.0" prefWidth="898.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.AccountRegistrationController">

    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <Text style="-fx-font-size: 18px;" text="Welcome to Account Registration" />


        <VBox fx:id="registrationForm" spacing="10">
            <Label text="Name" />
            <TextField fx:id="nameField" promptText="Enter your name" />

            <Label text="Email" />
            <TextField fx:id="emailField" promptText="Enter your email" />

            <Label text="Phone Number" />
            <TextField fx:id="phoneField" promptText="Enter your phone number" />

            <Label text="Password" />
            <PasswordField fx:id="passwordField" promptText="Create a secure password" />

            <Button fx:id="registerButton" onAction="#handleRegister" text="Register" />
        </VBox>
    </VBox>


    <VBox fx:id="emailVerification" spacing="10" visible="false" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="200">
        <Hyperlink fx:id="verifyEmailLink" onAction="#handleEmailVerification" text="Verify Email" />
        <Text fx:id="verificationStatus" />
    </VBox>


    <VBox fx:id="loginSection" spacing="10" visible="false" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="200">
        <Label text="Log In" />

        <Label text="Email" />
        <TextField fx:id="loginEmailField" promptText="Enter your email" />

        <Label text="Password" />
        <PasswordField fx:id="loginPasswordField" promptText="Enter your password" />

        <Button fx:id="loginButton" onAction="#handleLogin" text="Login" />
    </VBox>


    <VBox fx:id="profileUpdateSection" spacing="10" visible="false" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="200">
        <Label text="Update Your Profile" />

        <Label text="New Name" />
        <TextField fx:id="newNameField" promptText="Enter your new name" />

        <Label text="New Phone Number" />
        <TextField fx:id="newPhoneField" promptText="Enter your new phone number" />

        <Button fx:id="saveChangesButton" onAction="#handleSaveChanges" text="Save Changes" />
    </VBox>


    <VBox fx:id="twoFactorSection" spacing="10" visible="false" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="200">
        <Label text="Enable Two-Factor Authentication" />
        <CheckBox fx:id="enable2FACheckbox" text="Enable additional security" />

        <Button fx:id="setup2FAButton" onAction="#handle2FASetup" text="Setup 2FA" />
    </VBox>


    <VBox fx:id="termsSection" spacing="10" visible="false" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="200">
        <Text text="Please read and accept our Terms and Conditions" />
        <Hyperlink fx:id="termsLink" text="Read Terms and Conditions" />
        <CheckBox fx:id="acceptTermsCheckbox" text="I accept the Terms and Conditions" />
    </VBox>


    <VBox fx:id="confirmationSection" spacing="10" visible="false" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="200">
        <Text text="Congratulations! Your account is ready." />
        <Button fx:id="goToDashboardButton" onAction="#handleGoToDashboard" text="Go to Dashboard" />
    </VBox>
</AnchorPane>
