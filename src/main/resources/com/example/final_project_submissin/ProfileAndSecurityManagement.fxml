<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1216.0" prefWidth="712.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="your.controller.ProfileAndSecurityController">


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">
        <Label style="-fx-font-size: 24px;" text="Please log in to access your account" />
        <TextField fx:id="usernameField" prefWidth="300" promptText="Enter your username" />
        <PasswordField fx:id="passwordField" prefWidth="300" promptText="Enter your password" />
        <Button fx:id="loginButton" onAction="#login" text="Log In" />
    </VBox>


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="250">
        <Button fx:id="profileSettingsButton" onAction="#goToProfileSettings" text="Go to Profile Settings" />
    </VBox>


    <VBox alignment="CENTER" layoutX="44.0" layoutY="330.0" spacing="20" AnchorPane.leftAnchor="44.0" AnchorPane.rightAnchor="56.0" AnchorPane.topAnchor="330.0">
        <Label style="-fx-font-size: 18px;" text="Update Your Personal Information" />
        <TextField fx:id="nameField" prefWidth="300" promptText="Name" />
        <TextField fx:id="emailField" prefWidth="300" promptText="Email" />
        <TextField fx:id="phoneField" prefWidth="300" promptText="Phone Number" />
        <Button fx:id="saveInfoButton" onAction="#savePersonalInfo" text="Save Information" />
    </VBox>


    <VBox alignment="CENTER" layoutX="50.0" layoutY="550.0" spacing="20" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="550.0">
        <Label style="-fx-font-size: 18px;" text="Change Your Password" />
        <PasswordField fx:id="currentPasswordField" prefWidth="300" promptText="Current Password" />
        <PasswordField fx:id="newPasswordField" prefWidth="300" promptText="New Password" />
        <PasswordField fx:id="confirmPasswordField" prefWidth="300" promptText="Confirm New Password" />
        <Button fx:id="changePasswordButton" onAction="#changePassword" text="Change Password" />
    </VBox>


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="750" />


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="850" />


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="950">
        <Label style="-fx-font-size: 18px;" text="Enhance Account Security" />
        <CheckBox fx:id="enable2FA" text="Enable Two-Factor Authentication" />
        <CheckBox fx:id="enableRecoveryOptions" text="Enable Account Recovery Options" />
        <CheckBox fx:id="enableActivityAlerts" text="Enable Alerts for Suspicious Activity" />
        <Button fx:id="saveSecuritySettingsButton" onAction="#saveSecuritySettings" text="Save Security Settings" />
    </VBox>


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="1150">
        <Button fx:id="archiveSettingsButton" onAction="#archiveSettings" text="Archive Account Settings" />
    </VBox>
     <Button fx:id="logoutButton" layoutX="306.0" layoutY="867.0" onAction="#logout" text="Log Out Securely" />
     <Button fx:id="viewActivityButton" layoutX="269.0" layoutY="819.0" onAction="#viewAccountActivity" text="View Login and Transaction History" />
     <Label layoutX="265.0" layoutY="774.0" style="-fx-font-size: 18px;" text="Review Account Activity" />

</AnchorPane>
