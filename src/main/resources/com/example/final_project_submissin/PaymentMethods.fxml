<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1425.0" prefWidth="658.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="your.controller.PaymentMethodController">


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">
        <Label style="-fx-font-size: 24px;" text="Log in to Your Account" />
        <TextField fx:id="usernameField" minWidth="200" promptText="Username" />
        <PasswordField fx:id="passwordField" minWidth="200" promptText="Password" />
        <Button fx:id="loginButton" onAction="#loginUser" text="Log In" />
    </VBox>


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="200" />


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="300">
        <Label style="-fx-font-size: 18px;" text="Add a New Payment Method" />
        <TextField fx:id="paymentMethodNameField" prefWidth="200" promptText="Name on the Card or Account" />
        <TextField fx:id="paymentMethodDetailsField" prefWidth="200" promptText="Card Number or Bank Account Number" />
        <TextField fx:id="paymentMethodExpiryField" prefWidth="200" promptText="Expiry Date (MM/YY)" />
        <Button fx:id="addPaymentMethodButton" onAction="#addPaymentMethod" text="Add Payment Method" />
    </VBox>


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="500" />


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="700">
        <Label style="-fx-font-size: 18px;" text="Update Existing Payment Information" />
        <ComboBox fx:id="existingPaymentMethodsComboBox" prefWidth="200" promptText="Select Payment Method to Update" />
        <TextField fx:id="updatedPaymentDetailsField" prefWidth="200" promptText="Enter Updated Details" />
        <Button fx:id="updatePaymentMethodButton" onAction="#updatePaymentMethod" text="Update Payment Information" />
    </VBox>


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="900">
        <Label style="-fx-font-size: 18px;" text="Set Preferred Payment Method" />
        <ComboBox fx:id="preferredPaymentMethodComboBox" prefWidth="200" promptText="Select Preferred Payment Method" />
        <Button fx:id="setPreferredPaymentMethodButton" onAction="#setPreferredPaymentMethod" text="Set as Preferred" />
    </VBox>


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="1100">
        <ComboBox fx:id="paymentMethodHistoryComboBox" prefWidth="200" promptText="Select Payment Method" />
        <ListView fx:id="transactionHistoryListView" prefHeight="200" prefWidth="300" />
    </VBox>


    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="1400" />
     <Button fx:id="paymentMethodsButton" layoutX="133.0" layoutY="237.0" onAction="#navigateToPaymentMethods" text="Go to Payment Methods" />
     <Label layoutX="133.0" layoutY="1062.0" style="-fx-font-size: 18px;" text="Transaction History for Payment Methods" />
     <Button fx:id="archivePaymentMethodButton" layoutX="253.0" layoutY="1368.0" onAction="#archivePaymentMethods" text="Archive Payment Methods" />
     <Button fx:id="verifyPaymentMethodButton" layoutX="266.0" layoutY="632.0" onAction="#verifyPaymentMethod" text="Verify Payment Method" />
     <TextField fx:id="verificationCodeField" layoutX="46.0" layoutY="578.0" prefHeight="25.0" prefWidth="570.0" promptText="Enter OTP or Verification Code" />
     <Label layoutX="216.0" layoutY="529.0" style="-fx-font-size: 18px;" text="Verify Your Payment Method" />

</AnchorPane>
